<TickerScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: "20dp"
        spacing: "12dp"

        BoxLayout:
            size_hint_y: None
            height: "48dp"
            Button:
                text: "Admin"
                on_release: app.toggle_admin()
            Button:
                text: "\u00c5pne"
                on_release: app.open_current()
            Button:
                text: "X"
                on_release: setattr(__import__('kivy.core.window').core.window.Window, 'fullscreen', False)

        Label:
            text: root.headline
            font_size: "28sp"
            bold: True
            halign: "left"
            valign: "middle"
            text_size: self.size

        Label:
            text: root.subline
            font_size: "16sp"
            halign: "left"
            valign: "top"
            text_size: self.size

<AdminScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: "20dp"
        spacing: "12dp"
        BoxLayout:
            size_hint_y: None
            height: "48dp"
            Button:
                text: "Til ticker"
                on_release: app.toggle_admin()
        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: "90dp"
            Label:
                text: "Innstillinger"
                font_size: "18sp"
                bold: True
                size_hint_y: None
                height: "24dp"
                text_size: self.size
                halign: "left"
                valign: "middle"
            Label:
                text: "Hentefrekvens (sek): " + root.fetch_interval_display
                font_size: "16sp"
                size_hint_y: None
                height: "22dp"
                text_size: self.size
                halign: "left"
                valign: "middle"
            Label:
                text: "Ticker-intervall (sek): " + root.ticker_interval_display
                font_size: "16sp"
                size_hint_y: None
                height: "22dp"
                text_size: self.size
                halign: "left"
                valign: "middle"
            Label:
                text: "Min score: " + root.min_score_display
                font_size: "16sp"
                size_hint_y: None
                height: "22dp"
                text_size: self.size
                halign: "left"
                valign: "middle"
        Label:
            text: "Kilder"
            font_size: "18sp"
            bold: True
            size_hint_y: None
            height: "24dp"
            text_size: self.size
            halign: "left"
            valign: "middle"
        ScrollView:
            do_scroll_x: False
            GridLayout:
                id: sources_grid
                cols: 4
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "32dp"
                row_force_default: True
                spacing: "6dp"
